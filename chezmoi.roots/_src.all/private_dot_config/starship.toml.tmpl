[os]
style = "bg:gradient_a fg:text_bright"
disabled = false

# Without NerdFont
#[os.symbols]
#Windows = " Win"

# NerdFont - see https://www.nerdfonts.com/cheat-sheet
[os.symbols]
Windows = " ÔÖ∫"

[directory]
style = "bg:gradient_b fg:text_bright"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "‚Ä¶/"

[directory.substitutions]
"Documents" = "Û∞àô "
"Downloads" = "ÔÄô "
"Music" = "ÔÄÅ "
"Pictures" = "ÔÄæ "

[custom.chezmoi]
symbol = "üè†"
style = "bg:gradient_c fg:text_bright"
command = "chezmoi status | wc -l"
when = true
format = '[[ $symbol $output ](bg:gradient_c fg:text_bright)]($style)'

[git_branch]
symbol = "Ôêò"
style = "bg:gradient_d"
format = '[[ $symbol $branch ](bg:gradient_d fg:text_bright)]($style)'

[git_status]
style = "bg:gradient_d"
format = '[[($all_status$ahead_behind )](bg:gradient_d fg:text_bright)]($style)'

[nodejs]
symbol = "Óúò"
style = "bg:gradient_e"
format = '[[ $symbol ($version) ](bg:gradient_e fg:gradient_a)]($style)'

[rust]
symbol = "Óû®"
style = "bg:gradient_e"
format = '[[ $symbol ($version) ](bg:gradient_e fg:gradient_a)]($style)'

[golang]
symbol = "Óòß"
style = "bg:gradient_e"
format = '[[ $symbol ($version) ](bg:gradient_e fg:gradient_a)]($style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:gradient_f"
format = '[[ Ôê∫ $time ](bg:gradient_f fg:text_bright)]($style)'

[cmd_duration]
min_time = 500 # milliseconds
style = "bg:gradient_g"
# nerd font version:
format = '[[ Ôâí $duration ](bg:gradient_g fg:text_bright)]($style)'
# General UNICODE font version:
# format = '[[ ‚ßó $duration ](bg:gradient_g fg:text_bright)]($style)'
# Emoji version:
# format = '[[ ‚åõ $duration ](bg:gradient_g fg:text_bright)]($style)'

[status]
disabled = false
style = "bg:gradient_g fg:text_bright"
format = '[[$symbol$status ](bg:gradient_g fg:text_bright)]($style)'

[character]
disabled = false

