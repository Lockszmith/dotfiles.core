#! /usr/bin/env bash

FN="${FN:--H}"
[ -z "$NO_FN" ] || FN=""
PRE="${PRE:-}"
POST="${POST:-}"

GREP_ARG="${1:+$(printf '"%s" ' "${@}" )}"
GREP_ARG="${GREP_ARG:-\"\"}"

xargs -I {} "${XARGS[@]:--r}" sh -c "${PRE:-<} \"\$1\" ${PRE:+|} egrep --label=\"\$1\" $FN ${GREP_ARG} ${POST:+| $POST}" -- {} || true

