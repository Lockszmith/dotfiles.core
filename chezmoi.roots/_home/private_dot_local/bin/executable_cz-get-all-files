#! /usr/bin/env bash

set -euo pipefail

get-cz-managed() {
    cz managed --exclude=remove,dirs,externals || true
}
get-cz-unmanaged() {
#   cz unmanaged --include=dirs | sed -Ee 's|$|/|;'
    cz unmanaged --exclude=dirs \
       | grep -Ev '\.zwc$'
}

${SET_X:-:} -x
(
    sed 's/^/M: /' <(get-cz-managed);
    sed 's/^/U: /' <(get-cz-unmanaged)
) | sort -Vk'2,2'

${SET_X:-:} +x
# vim: set ft=sh sw=4 sts=4 et:
